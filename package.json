{
  "name": "claudegate",
  "version": "1.0.0",
  "description": "Terminal utility to switch between AI provider configurations for Claude CLI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "claudegate": "./bin/claudegate.js",
    "cc": "./bin/cc.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepare": "npm run build",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "claude",
    "anthropic",
    "ai",
    "cli",
    "terminal",
    "provider",
    "switch",
    "openrouter",
    "moonshot",
    "zai",
    "gateway",
    "wrapper",
    "profile",
    "configuration",
    "multi-provider"
  ],
  "author": "Your Name <your.email@example.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Naresh084/claudegate.git"
  },
  "bugs": {
    "url": "https://github.com/Naresh084/claudegate/issues"
  },
  "homepage": "https://github.com/Naresh084/claudegate#readme",
  "files": [
    "dist",
    "bin",
    "LICENSE",
    "README.md"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "ora": "^8.0.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "semantic-release": "^24.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "release": {
    "branches": ["main", "master"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      ["@semantic-release/npm", {
        "provenance": true
      }],
      ["@semantic-release/git", {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }],
      "@semantic-release/github"
    ]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  }
}
